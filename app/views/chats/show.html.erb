<%= turbo_stream_from @chat, :messages %>
<div>
  <div>
    <%= @chat.title %></div>
  <p>There are
    <%= @chat.messages.count %>
    messages in this chat</p>
  <div id="messages">
    <%= render partial: "messages/message", collection: @chat.messages %>
  </div>

  <div>
    <%= form_with model: [@chat, @chat.messages.build] do |form| %>
      <%= form.text_area :content %>
      <%= form.submit %>
    <% end %>
  </div>
</div>
